<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chhd.android.demo.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="list" />

            <Button
                android:id="@+id/btn_clear_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="clear_edit_text" />

            <Button
                android:id="@+id/btn_click_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="click_bg" />

            <Button
                android:id="@+id/btn_decoration_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="decoration_grid" />


            <Button
                android:id="@+id/btn_decoration_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="decoration_list" />

            <Button
                android:id="@+id/btn_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="popup" />


            <Button
                android:id="@+id/btn_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="web" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
