<resources>

    <!-- 黑色箭头 -->
    <style name="ThemeOverlay.Light" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 白色箭头 -->
    <style name="ThemeOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- 白色背景 -->
    <style name="PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 黑色背景 -->
    <style name="PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- 全屏主题 -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!-- 水平分割线 -->
    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!-- 垂直分割线 -->
    <style name="LineVertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <!-- 透明主题 -->
    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- PopupListView默认动画 -->
    <style name="PopupFadeAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>
</resources>
